<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvhead01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="UPDATE HERE "
                android:textColor="@color/colour_black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etname01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Name "
                android:inputType="textPersonName"
                android:textColorHint="@color/colour_black" />

    <EditText
        android:id="@+id/etaddress01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Address "
        android:textColorHint="@color/colour_black" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etphn01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etemail"
        android:layout_below="@+id/etemail"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Phone Number "
        android:inputType="phone"
        android:textColorHint="@color/colour_black" />

    <EditText
        android:id="@+id/etuname01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="User Id "
        android:inputType="textPersonName"
        android:textColorHint="@color/colour_black" />
    <EditText
        android:id="@+id/etmail01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Email id"
        android:inputType="textPersonName"
        android:textColorHint="@color/colour_black" />

    <EditText
        android:id="@+id/etpass01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Password "
        android:inputType="textPassword"
        android:textColorHint="@color/colour_black" />

    <Button
        android:id="@+id/btnupdatepr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="right"
        android:onClick="updatepro"
        android:text="Update Now"
        android:background="#8F95C2"
        android:padding="10dp"
        android:textColor="#fff" />
  
        </LinearLayout>
    </ScrollView>
    

</RelativeLayout>
